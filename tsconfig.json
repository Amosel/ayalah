{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ],
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}