---
export interface Props {
  onSubmitTitle?: string;
  name?: string;
  email?: string;
  attendees?: number;
  dish?: string;
  games?: boolean;
}

const {
  onSubmitTitle = "Submit",
  name = "",
  email = "",
  attendees = 0,
  dish = "",
  games = false,
} = Astro.props;
---

<div class="text-center mb-4">
  <form
    id="rsvpForm"
    action="/submit-rsvp"
    method="post"
    class="space-y-4 max-w-md mx-auto w-full"
  >
    <div>
      <label for="name" class="text-lg">Your Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full p-2 border border-gray-300 rounded mt-1"
        tabindex="1"
        value={name}
      />
    </div>

    <div>
      <label for="email" class="text-lg">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full p-2 border border-gray-300 rounded mt-1"
        tabindex="2"
        value={email}
      />
    </div>

    <div>
      <label for="attendees" class="text-lg">Number of Attendees:</label>
      <input
        type="number"
        id="attendees"
        name="attendees"
        min="1"
        required
        class="w-full p-2 border border-gray-300 rounded mt-1"
        tabindex="3"
        value={attendees}
      />
    </div>

    <div>
      <label for="dish" class="text-lg">(optional) Dish to Share:</label>
      <input
        type="text"
        id="dish"
        name="dish"
        class="w-full p-2 border border-gray-300 rounded mt-1"
        tabindex="4"
        value={dish}
      />
    </div>

    <div class="flex items-center">
      <input
        type="checkbox"
        id="games"
        name="games"
        tabindex="5"
        class="mr-2"
        value={games == true ? "on" : "off"}
      />
      <label for="games" class="text-lg">(optional) Bringing Games</label>
    </div>

    <button
      type="submit"
      tabindex="6"
      class="w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded"
      >{onSubmitTitle}</button
    >
    <slot/>
  </form>
</div>
